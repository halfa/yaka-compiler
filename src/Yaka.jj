void analyse() : {}
{
   <PROGRAMME><ident> { Make.begin_program(); }	
   ( declFonction() )*
   <PRINCIPAL> { Make.begin_principal(); }
   bloc()
   <FPRINCIPAL>
   <FPROGRAMME> { Make.end_program(); }
}

void declFonction() : {}
{
	type() <FONCTION> <ident> paramForms()
	bloc()
	<FFONCTION>
}

void paramForms() : {}
{
	( paramForm() ("," paramForm() )* )?
}

void paramForm() : {}
{
	type() <ident>
}

void bloc() : {}{
 (declConst())*
 (declVar())*	{ Make.how_fat_are_you(); }	
   suiteInstr()  // modifié
}

void declConst() : {}
{
  <CONST>  defConst() ( "," defConst())* ";"
}

void defConst() : {}
{
	
  <ident>  { Make.define_constant(); }
   "=" valConst() 
}

void valConst() : {}{
  <entier> 	{ Make.define_int(); }
 | <ident>	{ Make.define_ident(); }
 | <VRAI> 	{ Make.define_true(); }
 | <FAUX>   { Make.define_false(); }
}


void declVar() : {}
{
  <VAR> type()	
  <ident> { Make.create_var(); }
  (","
      <ident> { Make.create_var(); }
  )* ";"
}

void type() :{}
{
   <ENTIER> { Make.declare_var_int(); }
 | <BOOLEEN> { Make.declare_var_bool(); }
}
/*
 * Syntaxe des instructions.
 */
void suiteExpr() : {}
{ (expression() (";" (expression())? )*)? }

void suiteInstr() : {}
{ (instruction() (";" (instruction())? )*)? }

void instruction() : {}
{ affectation() | lecture() | ecriture() | iteration() | conditionnelle() | retourne() }

void retourne() : {}
{
	<RETOURNE> expression()
}

void conditionnelle() : {}
{
<SI> {Make.startIf();} expression()
<ALORS> {Make.condIf();} (instruction()";")*
( (<SINON> {Make.elseIf();} (instruction()";")*  <FSI> {Make.endIf();}) | (<FSI> {Make.elseIf(); Make.endIf();} ))
}

void iteration() : {}
{ <TANTQUE> 			{Make.startLoop();} 
expression()  			{Make.condLoop();} 
<FAIRE> (instruction()";")* 
<FAIT> 					{Make.endLoop();} }

void affectation() : {}
{ <ident> {Declaration.setCurrentIdent(YakaTokenManager.identLu);} "=" expression() {Make.assignment();} }

void lecture() : {}
{ <LIRE> "(" <ident> ")" {Make.reading();}
}

void ecriture() :{}
{ <ECRIRE>( "(" ( expression() {Make.write_expression();} 
| <chaine> { Make.write_string(); } ) ")" ) 
| <ALALIGNE> {Make.aLaLigne();} }

/*
 * Expression
 */
void expression() : {}
{
  simpleExpr() 
  (opRel() 
  simpleExpr() {Make.whatRel();}
  )?
}

void simpleExpr() : {}
{
   terme() 
   (opAdd() 
   terme() {Make.whatAdd();}
   )*
} 
void terme() : {}
{
  facteur() 
  (opMul() 
  facteur()	{Make.whatMul();}
  )*
}
void facteur() : {}
{   primaire() 
  |  opNeg() primaire() {Make.whatNeg();}
}

void primaire (): {}
{
   valeur()
 | "(" expression() ")" 
 
}

